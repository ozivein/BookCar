@model ResultBlogDto
<div class="col-md-8 ftco-animate">
    <h2 class="mb-3">@Model.Title</h2>
    <p>@Model.Description</p>
    <p>
        <img src="@Model.CoverImageUrl" alt="" class="img-fluid">
    </p>
    @await Component.InvokeAsync("_BlogDetailCloudTagByBlogComponentPartial", new { id = ViewBag.dataProtectBlogId })

    @await Component.InvokeAsync("_BlogDetailsAuthorAboutComponentPartial", new { id = ViewBag.dataProtectBlogId })

    <div class="pt-5 mt-5">
        <h3 class="mb-5">@ViewBag.CommentCount Yorum</h3>
        @await Component.InvokeAsync("_CommentListByBlogComponentPartial", new { id = ViewBag.dataProtectBlogId })

        @await Html.PartialAsync("/Views/Comment/CommentAdd.cshtml", new CreateCommentDto { DataProtectBlogId =ViewBag.dataProtectBlogId })
    </div>

</div>
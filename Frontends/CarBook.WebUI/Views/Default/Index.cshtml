@model ResultRentAcarLocationFilterDto
@{
    Layout = null;
}
<style type="text/css">
    #select option {
        color: black;
    }
</style>

<!DOCTYPE html>
<html lang="en">
@await Component.InvokeAsync("_HeadUILayoutViewComponentPartial")
<body>

    @await Component.InvokeAsync("_NavbarUILayoutViewComponentPartial")
    @await Component.InvokeAsync("_MainCoverDefaultViewComponentPartial")
    <section class="ftco-section ftco-no-pt bg-light">
        <div class="container">
            <div class="row no-gutters">
                <div class="col-md-12	featured-top">
                    <div class="row no-gutters">
                        <div class="col-md-4 d-flex align-items-center">
                            <form asp-action="Index" asp-controller="Default" class="request-form ftco-animate bg-primary">
                                <h2>
                                    Şimdi Aracınızı Kiralayın
                                </h2>
                                <div class="form-group">
                                    <label for="" class="label">Alınacak Lokasyon</label>
                                    <select class="form-control" id="select" asp-for="@Model.LocationId" asp-items="@ViewBag.SelectValues">
                                    </select>
                                </div>
                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Alış Tarihi</label>
                                        <input type="date" class="form-control" asp-for="@Model.PicUpDate" placeholder="Tarih Seçiniz">
                                    </div>
                                    <div class="form-group ml-2">
                                        <label for="" class="label">Teslim Tarihi</label>
                                        <input type="date" class="form-control" asp-for="@Model.BackOffDate" placeholder="Tarih Seçiniz">
                                    </div>
                                </div>
                                <div class="d-flex">
                                    <div class="form-group mr-2">
                                        <label for="" class="label">Alış Saati</label>
                                        <input type="time" class="form-control" asp-for="@Model.PicUpTime" placeholder="Saat Seçiniz">
                                    </div>
                                    <div class="form-group ml-2">
                                        <label for="" class="label">Teslim Saati</label>
                                        <input type="time" class="form-control" asp-for="@Model.BackOffTime" placeholder="Saat Seçiniz">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Uygun Araçları Listele" class="btn btn-secondary py-3 px-4">
                                </div>
                            </form>
                        </div>
                        <div class="col-md-8 d-flex align-items-center">
                            <div class="services-wrap rounded-right w-100">
                                <h3 class="heading-section mb-4">Araç Kiralamanın En Basit Yolu</h3>
                                <div class="row d-flex mb-4">
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Almak istediğim konumu seç.</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">En uygun araçları gör</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                        <div class="services w-100 text-center">
                                            <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                            <div class="text w-100">
                                                <h3 class="heading mb-2">Kiralamalayı Tamamla. Hepsi Bu!</h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p><a asp-action="Index" asp-controller="CarPricing" class="btn btn-primary py-3 px-4">Araç Fiyat Listesini Görün</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
    @await Component.InvokeAsync("_DefaultLastFiveCarWithBrandComponentPartial")
    @await Component.InvokeAsync("_AboutUsViewComponentPartial")
    @await Component.InvokeAsync("_ServiceComponentPartial")
    @await Component.InvokeAsync("_BecomeADriverViewComponentPartial")
    @await Component.InvokeAsync("_TestimonialViewComponentPartial")
    @await Component.InvokeAsync("_BlogViewComponentPartial")
    @await Component.InvokeAsync("_DefaultStatisticComponentPartial")
    @await Component.InvokeAsync("_FooterUILayoutViewComponentPartial")
    @await Component.InvokeAsync("_ScriptUILayoutViewComponentPartial")

</body>
</html>
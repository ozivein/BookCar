@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";

    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog Kategori Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Blog Kategori ile ilgili ekleme, silme güncelleme, arama ve listeleme gibi işlemleri bu sayfadan geçerkleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <a asp-controller="AdminCategory" asp-action="CreateCategory" class="btn btn-outline-success">Yeni Kategori</a>
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Kategori Adı</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Kategoriye Göre Bloglar</th>
                                    </tr>
                                </thead>
                                @if (Model.Count > 0)
                                {
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Name</td>
                                                <td><a asp-controller="AdminCategory" asp-action="Delete" asp-route-id="@item.DataProtect"  class="btn btn-outline-danger">Sil</a></td>
                                                <td><a asp-controller="AdminCategory" asp-action="Update" asp-route-id="@item.DataProtect" class="btn btn-outline-warning">Güncelle</a></td>
                                                <td><a asp-controller="AdminCategory" asp-action="#" asp-route-id="@item.DataProtect" class="btn btn-outline-primary">Kategoriye Göre Bloglar</a></td>
                                            </tr>
                                        }
                                    </tbody>

                                }
                                else
                                {
                                    <tbody>
                                        <tr><td colspan="5">Listelenecek Kategori Yok</td> </tr>
                                    </tbody>
                                }
                            </table>

                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
        </div>
    </div> <!-- container-fluid -->
</div>


@model UpdateLocationDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Lokasyon Güncelleme</h4>
                        <p class="card-subtitle mb-4">Lokasyon İle ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri güncellemelerinden sonra Güncelle butonuna tıklayarak işlemi tamamlayabilirsiniz</p>

                        <form asp-controller="AdminLocation" asp-action="Update" method="post">
                            <input type="hidden" asp-for="@Model.LocationId"/>
                            <div class="form-group">
                                <label asp-for="@Model.Name">Lokasyon</label>
                                <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Lokasyon Yazınız" />
                                <small></small>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
</div>


@model List<GetCommentByBlogIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";

    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yorum Listesi - BlogId: @ViewBag.BlogId</h4>
                        <p class="card-subtitle mb-4">
                            Bloglarla ilgili o bloga yapılmış olan yorum listesini bu sayfadan görüntüleyebilirsiniz. İlgili yorumları kaldırabilir ya da tekrar aktif hale getirebilirsiniz. Bunun için yorumların altında yer alan butonları kullanabilirsiniz.
                        </p>
                        @if (Model.Count > 0)
                        {
                            @foreach (var item in Model)
                            {
                                count++;
                                <div class="col-md-8 offset-2">
                                    <div class="card">
                                        <h5 class="card-header">Yorum @count @item.CreatedDate.ToShortDateString()</h5>
                                        <div class="card-body">
                                            <h4 class="card-title">@item.Name</h4>
                                            <p class="card-text">
                                                @item.Description
                                            </p>
                                            <a asp-controller="AdminComment" asp-action="#" class="btn btn-primary waves-effect waves-light">Yorumu Kaldır</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
        </div>
    </div> <!-- container-fluid -->
</div>


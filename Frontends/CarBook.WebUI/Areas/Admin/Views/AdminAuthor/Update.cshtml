@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yazar Güncelleme</h4>
                        <p class="card-subtitle mb-4">Yazar İle ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri güncellemesinden sonra güncelle butonuna tıklayarak işlemi tamamlayabilirsiniz</p>

                        <form asp-controller="AdminAuthor" asp-action="Update" method="post">
                            <input type="hidden" asp-for="@Model.AuthorId" />
                            <div class="form-group">
                                <label asp-for="@Model.Name">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Ad Soyad Yazınız" />
                                <small></small>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Description">Açıklama</label>
                                <input type="text" class="form-control" asp-for="@Model.Description" placeholder="Açıklama Yazınız" />
                                <small></small>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.ImageUrl">Resim</label>
                                <input type="text" class="form-control" asp-for="@Model.ImageUrl" placeholder="Fotoğraf linki Yazınız" />
                                <small></small>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
</div>
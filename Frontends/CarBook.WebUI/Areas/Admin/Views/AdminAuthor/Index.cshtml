@model List<ResultAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";

    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yazar listesi</h4>
                        <p class="card-subtitle mb-4">
                            Yazar ile ilgili ekleme, silme güncelleme, arama ve listeleme gibi işlemleri bu sayfadan geçerkleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <a asp-controller="AdminAuthor" asp-action="CreateAuthor" class="btn btn-outline-success">Yeni Yazar</a>
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Ad-Soyad</th>
                                        <th>Fotoğraf</th>
                                        <th>Açıklama</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Yazarın Blogları</th>
                                    </tr>
                                </thead>
                                @if (Model.Count > 0)
                                {
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Name</td>
                                                <td><img src="@item.ImageUrl" width="50" height="50" style="margin-right:20px" /></td>
                                                <td>@item.Description</td>
                                                <td><a asp-controller="AdminAuthor" asp-action="Delete" asp-route-id="@item.DataProtect" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a asp-controller="AdminAuthor" asp-action="Update" asp-route-id="@item.DataProtect" class="btn btn-outline-warning">Güncelle</a></td>
                                                <td><a asp-controller="AdminAuthor" asp-action="#" asp-route-id="@item.DataProtect" class="btn btn-outline-primary">Yazarın Blogları</a></td>
                                            </tr>
                                        }
                                    </tbody>

                                }
                                else
                                {
                                    <tbody>
                                        <tr><td colspan="6">Listelenecek Yazar Verisi Yok</td> </tr>
                                    </tbody>
                                }
                            </table>

                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
        </div>
    </div> <!-- container-fluid -->
</div>


@model CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Hizmet Girişi</h4>
                        <p class="card-subtitle mb-4">Hizmetler İle ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz</p>

                        <form asp-controller="AdminService" asp-action="CreateService" method="post">
                            <div class="form-group">
                                <label asp-for="@Model.Title">Başlık</label>
                                <input type="text" class="form-control" asp-for="@Model.Title" placeholder="Başlık Yazınız" />
                                <small></small>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Description">Açıklama</label>
                                <input type="text" class="form-control" asp-for="@Model.Description" placeholder="Açıklama Yazınız" />
                                <small></small>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.IconUrl">Resim</label>
                                <input type="text" class="form-control" asp-for="@Model.IconUrl" placeholder="İcon linki Yazınız" />
                                <small></small>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
</div>


@model List<GetCarPricingWithTimePeriodDto>
<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Araç Kiralama Ücretleri</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Bazlı Araçların Günlük,Haftalık ve Aylık kiralama ücretleri.
            </p>

            <div class="table-responsive">
                <table class="table table-centered table-hover table-xl mb-0" id="recent-orders">
                    <thead>
                        <tr>
                            <th class="border-top-0">Marka-Model</th>
                            <th class="border-top-0">Günlük Fiyat</th>
                            <th class="border-top-0">Haftalık Fiyat</th>
                            <th class="border-top-0">Aylık Fiyat</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-truncate">@item.ModelBrand</td>
                                    <td class="text-truncate">₺ @item.DailyAmound</td>
                                    <td class="text-truncate">₺ @item.WeeklyAmount</td>
                                    <td class="text-truncate">₺ @item.MountlyAmoun</td>
                                   
                                </tr>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning">Veri Yok</div>
                        }

                    </tbody>
                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div> <!-- end col -->
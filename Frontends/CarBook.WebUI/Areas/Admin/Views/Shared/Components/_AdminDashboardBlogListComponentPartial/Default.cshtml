@model List<GetBlogWithAuthorAndCategoryDto>
@{
    int count = 0;
}
<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Bloglar</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Bloglar ve Bloga ait kategori ve yazarlar.
            </p>

            <div class="table-responsive">
                <table class="table table-centered table-hover table-xl mb-0" id="recent-orders">
                    <thead>
                        <tr>
                            <th class="border-top-0">#</th>
                            <th class="border-top-0">Blog Başlığı</th>
                            <th class="border-top-0">Kategori</th>
                            <th class="border-top-0">Yazar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td class="text-truncate">@count</td>
                                    <td class="text-truncate">@item.Title</td>
                                    <td class="text-truncate">@item.CategoryName</td>
                                    <td class="text-truncate">@item.AuthorName</td>

                                </tr>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning">Blog Yok</div>
                        }

                    </tbody>
                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div> <!-- end col -->
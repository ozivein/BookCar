@model List<ResultCarFeatureListByCarIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araca Ait Özellikler Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Araca ait özellik eklemesi yapabilir, mevcut özellikleri kaldırabilir ilgili güncellemeleri gerçekleştirebilirsiniz.
                        </p>
                        <form action="Index" method="post">
                            @if (Model.Count > 0)
                            {
                                for (int i = 0; i < Model.Count; i++)
                                {
                                    <div class="form-check">
                                        <input type="hidden" asp-for="@Model[i].CarFeatureId" />
                                        <input type="hidden" asp-for="@Model[i].FeatureId" />
                                        <input type="hidden" asp-for="@Model[i].CarId" />
                                        <input type="hidden" asp-for="@Model[i].DataProtect" />

                                        <input type="checkbox" asp-for="@Model[i].Available" class="form-check-input" />
                                        <label class="form-check-label" for="@Model[i].Available">@Model[i].FeatureName</label>
                                    </div>
                                }
                                <br />
                                <input type="submit" class="btn btn-success" value="Değişiklikleri Kaydet" />

                            }
                            else
                            {
                                <div class="alert alert-warning">Araç Özelliği Bulunamadı</div>
                            }

                        </form>


                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
        </div>
    </div> <!-- container-fluid -->
</div>

@model CreateFooterAddressDto
@{
    ViewData["Title"] = "CreateFooterAddress";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Alt Adres Girişi</h4>
                        <p class="card-subtitle mb-4">Alt adres İle ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz</p>

                        <form asp-controller="AdminFooterAddress" asp-action="CreateFooterAddress" method="post">
                            <div class="form-group">
                                <label asp-for="@Model.Description">Açıklama</label>
                                <input type="text" class="form-control" asp-for="@Model.Description" placeholder="Açıklama Yazınız" />
                                <small></small>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Address">Adres</label>
                                <textarea  asp-for="@Model.Address" cols="5" rows="5" class="form-control"></textarea>
                                <small></small>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Phone">Telefon</label>
                                <input type="text" class="form-control" asp-for="@Model.Phone" placeholder="Telefon Yazınız" />
                                <small></small>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Phone">Resim</label>
                                <input type="email" class="form-control" asp-for="@Model.Email" placeholder="E-Posta Yazınız" />
                                <small></small>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
</div>


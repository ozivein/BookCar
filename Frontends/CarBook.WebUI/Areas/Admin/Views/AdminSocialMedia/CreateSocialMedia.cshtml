@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Sosyal Medya Girişi</h4>
                        <p class="card-subtitle mb-4">Sosyal Medya İle ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz</p>

                        <form asp-controller="AdminSocialMedia" asp-action="CreateSocialMedia" method="post">
                            <div class="form-group">
                                <label asp-for="@Model.Name">Başlık</label>
                                <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Sosyal Medya Adı Yazınız" />
                                <small></small>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Url">Sosya Medya Linki</label>
                                <input type="text" class="form-control" asp-for="@Model.Url" placeholder="Sosyal Medya Linki Yazınız" />
                                <small></small>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Icon">Icon</label>
                                <input type="text" class="form-control" asp-for="@Model.Icon" placeholder="Sosyal Medya İcon Yazınız" />
                                <small></small>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
</div>


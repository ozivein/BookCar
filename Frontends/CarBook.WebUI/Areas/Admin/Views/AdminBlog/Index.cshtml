@model List<GetBlogWithAuthorAndCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";

    int count = 0;
}
<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog listesi</h4>
                        <p class="card-subtitle mb-4">
                            Blog ile ilgili kaldırma , arama ve listeleme gibi işlemleri bu sayfadan geçerkleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Yazar Adı</th>
                                        <th>Kategori Adı</th>
                                        <th>Fotoğraf</th>
                                        <th>Açıklama</th>
                                        <th>Oluşturulma Tarihi</th>
                                        <th>Kaldır</th>
                                        <th>Blogu Aç</th>
                                        <th>Yorumlar</th>
                                    </tr>
                                </thead>
                                @if (Model.Count > 0)
                                {
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <th scope="row">@count</th>
                                                <td>@item.Title</td>

                                                <td>@item.AuthorName</td>
                                                <td>@item.CategoryName</td>
                                                <td><img src="@item.CoverImageUrl" width="50" height="50" style="margin-right:20px" /></td>
                                                <td>@item.Description</td>
                                                <td>@item.CreatedDate.ToShortDateString()</td>
                                                <td><a asp-controller="AdminBlog" asp-action="Delete" asp-route-id="@item.DataProtect" class="btn btn-outline-danger">Kaldır</a></td>
                                                <td><a asp-controller="AdminBlog" asp-action="#" asp-route-id="@item.DataProtect" class="btn btn-outline-primary">Blogu Aç</a></td>
                                                <td><a asp-controller="AdminComment" asp-action="Index" asp-route-id="@item.DataProtect" class="btn btn-outline-info">Yorumlar</a></td>
                                            </tr>
                                        }
                                    </tbody>

                                }
                                else
                                {
                                    <tbody>
                                        <tr><td colspan="6">Listelenecek Blog Verisi Yok</td> </tr>
                                    </tbody>
                                }
                            </table>

                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
        </div>
    </div> <!-- container-fluid -->
</div>

